<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/select_image"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/profile_image"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            android:scaleX="0"
            android:scaleY="0" />
        <Constraint
            android:id="@+id/skip_image"
            motion:layout_constraintEnd_toEndOf="@+id/select_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/select_image"
            motion:layout_constraintStart_toStartOf="@+id/select_image"
            android:layout_marginTop="16dp"
            android:scaleX="0"
            android:scaleY="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light application theme. -->
    <style name="Theme.SocialMeme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="actionBarTheme">@color/main</item>
        <item name="titleTextColor">#707070</item>
        <item name="textFillColor">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="background">@color/white</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main</item>
        <item name="colorSecondaryVariant">@color/main</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/actionBarColorDark</item>
    </style>

    <!-- Night application theme. -->
    <style name="AppTheme.Base.Night" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="actionBarTheme">@color/actionBarColorDark</item>
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="textFillColor">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="titleTextColor">@color/titleTextColor</item>
        <item name="background">@color/main_dark</item>
        <item name="cardBackgroundColor">@color/cardBackgroundColorDark</item>
        <item name="android:statusBarColor">@color/actionBarColorDark</item>
        <item name="android:navigationBarColor">@color/main_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main</item>
        <item name="colorSecondaryVariant">@color/main</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="BottomSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom_sheet</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom_sheet</item>
    </style>

    <style name="TopSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
</resources>